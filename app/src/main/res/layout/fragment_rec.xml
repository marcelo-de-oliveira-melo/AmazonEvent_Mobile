<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.AmazonEvent.recFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campoPesquisa"
            app:layout_constraintVertical_bias="1.0"
            app:reverseLayout="false" />

        <Button
            android:id="@+id/btnPesquisa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/round_bg"
            android:foreground="@drawable/ic_buscaa"
            android:foregroundTint="#FFFFFF"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/campoPesquisa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/campoPesquisa" />

        <Button
            android:id="@+id/btnCancela"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_close_menor"
            android:foregroundTint="#FFFFFF"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/campoPesquisa"
            app:layout_constraintEnd_toEndOf="@+id/campoPesquisa"
            app:layout_constraintTop_toTopOf="@+id/campoPesquisa" />

        <EditText
            android:id="@+id/campoPesquisa"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_border"
            android:backgroundTint="#34AFACAC"
            android:drawableStart="@drawable/ic_buscaa"
            android:drawablePadding="5dp"
            android:drawableTint="#B5393636"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:hint="Pesquisar..."
            android:inputType="textCapSentences"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toStartOf="@+id/btnPesquisa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"

            android:fontFamily="@font/comfortaa_bold"


            android:text="AmazonEvent"
            android:textAlignment="textStart"
            android:textColor="#278EDF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>